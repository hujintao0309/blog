<%
page.layout = "tags"
page.title = "Tags"
page.subtitle = "“为什么，我们总喜欢给别人贴标签？”"
page.banner_img = theme.tags.banner_img
page.banner_img_height= theme.tags.banner_img_height

var min_font = theme.tags.tagcloud.min_font || 15
var max_font = theme.tags.tagcloud.max_font || 30
var unit = theme.tags.tagcloud.unit || 'px'
var start_color = theme.tags.tagcloud.start_color || '#BBBBEE'
var end_color = theme.tags.tagcloud.end_color || '#337ab7'
%>

<div class="text-center tagcloud">
    <%- tagcloud({min_font: min_font, max_font: max_font, amount: 999, unit: unit, color: true, start_color, end_color}) %>
</div>